URL=""
host=""
time=no

usage_exit() {
    echo "Usage: $0 [-t] [chost]"
    echo "    chost       use chost as covert host"
    echo "    -t          useful for timing tests"
    exit 1
}

while getopts "?h:t" opt; do
    case "$opt" in
    \?)
        usage_exit
        ;;
    h)
        host=$OPTARG
        ;;
    t)
        time=yes
        URL="/?size=1000000"
        ;;
    *) 
        echo "Unknown option: $opt"
        usage_exit
        ;;
    esac
done

if [ -z $host ]; then
    host=covert
    echo Using default covert host $host
fi  


case $time in
yes)
    curl --insecure --socks4 localhost:5010 http://"${host}$URL" > /dev/null
    ;;
no)
    curl --insecure --socks4 localhost:5010 http://"${host}$URL"
    ;;
esac
    


